<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorLink">@color/colorPrimaryText</item>
    </style>

    <!--Collapsed Toolbar Layout Style-->
    <style name="collapsedToolbarStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Standard CardView Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin_top_bottom</item>
    </style>

    <!-- CardView LinearLayout Style-->
    <style name="CardViewLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/linearlayout_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/linearlayout_padding_top_bottom</item>
        <item name="android:paddingRight">@dimen/linearlayout_padding_right_left</item>
        <item name="android:paddingLeft">@dimen/linearlayout_padding_right_left</item>
    </style>

    <!-- Standard CardView Text Style-->
    <style name="CardViewText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/clickable_min_height</item>
    </style>

    <!-- CardView Title Text Style-->
    <style name="CardViewTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/cardview_title_text_margin_bottom</item>
    </style>

    <!-- Buy ticket button style -->
    <style name="buy_ticket_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin_left_right</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
